{{ attach_library('base/text-cards') }}
{% set catch_cache = content|render %}
{% set color = paragraph.field_background_color.value %}
{% if color is not empty %}
    {% set bg = color ~ ' has-bg'%}
{% endif %}
<div class="base__text-card {{bg}}">
    <div class="inner">
        {% if content.field_title.0 %}
            <h3>
                {{ content.field_title }}
            </h3>
        {% endif %}
       <div class="blurb">
           {{content.field_rich_text}}
       </div>
   </div>
</div>