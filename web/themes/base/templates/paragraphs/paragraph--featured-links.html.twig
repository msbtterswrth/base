{{ attach_library('base/featured-links') }}
{% set catch_cache = content|render %}
{% block content %}
	{% set color = paragraph.field_background_color.value %}
	{% if color is not empty %}
		{% set bg = color ~ ' has-bg'%}
	{% endif %}
	<div class="featured-links {{bg}}">
		<div class="inner">
			<div class="blurb">
				{% if content.field_title.0 %}
					<h2>{{content.field_title.0}}</h2>
				{% endif %}
				{{ content.field_rich_text }}
			</div>
			<div class="links">
				{{ content.field_links }}
			</div>
		</div>
	</div>
{% endblock %}
