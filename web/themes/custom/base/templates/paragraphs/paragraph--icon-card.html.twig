{{ attach_library('base/icon-cards') }}
{% set catch_cache = content|render %}
{% set color = paragraph.field_background_color.value %}
{% if color is not empty %}
    {% set bg = color ~ ' has-bg'%}
{% endif %}
<div class="base__icon-card {{bg}}">
    <div class="inner">
        {% if content.field_icon.0 %}
            <div class="icon">                
                {{content.field_icon}}
            </div>    
        {% endif %}
        <div class="blurb">
            {% if content.field_title.0 %}
                <h3>
                    {{ content.field_title }}
                </h3>
            {% endif %}
           {{content.field_rich_text}}
       </div>
   </div>
</div> 